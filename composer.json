{
    "name": "helhum/sentry-typo3",
    "license": "GPL-2.0-or-later",
    "description": "Sentry Integration for TYPO3",
    "keywords": [
        "TYPO3",
        "sentry",
        "error-reporting"
    ],
    "support": {
        "issues": "https://github.com/helhum/sentry-typo3"
    },
    "homepage": "https://helhum.io",
    "authors": [
        {
            "name": "Helmut Hummel",
            "email": "typo3@helhum.io"
        }
    ],
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": false,
            "typo3/class-alias-loader": false
        }
    },
    "autoload": {
        "psr-4": {
            "Helhum\\SentryTypo3\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "helhum/php-error-reporting": "^1.0",
        "sentry/sdk": "^3.3",
        "php-http/guzzle7-adapter": "^1.0",
        "typo3/cms-core": "^12.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "saschaegerer/phpstan-typo3": "^1.1.2",
        "typo3/minimal": "*"
    },
    "extra": {
        "typo3/cms": {
        }
    }
}
